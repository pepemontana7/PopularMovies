<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jose.popularmovies.MovieDetailActivity"
    tools:showIn="@layout/activity_movie_detail">




        <ImageView
        android:id="@+id/detail_item_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
         android:layout_below="@+id/detail_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
             />

        <TextView
            android:id="@+id/detail_title"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="@string/app_name"
            android:background="#07e6ff"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textAlignment="gravity"
            android:paddingLeft="5dp"
            android:gravity="center_vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:text="2015"
        android:id="@+id/releaseDate"
        android:layout_alignTop="@+id/detail_item_image"
        android:layout_toRightOf="@+id/detail_item_image"
        android:layout_toEndOf="@+id/detail_item_image"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:text="5/10"
        android:id="@+id/userRating"
        android:layout_below="@+id/releaseDate"
        android:layout_toRightOf="@+id/detail_item_image"
        android:layout_toEndOf="@+id/detail_item_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#ffffff"
        android:layout_marginLeft="7dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text\n thesth"
        android:id="@+id/plot"
        android:layout_below="@+id/detail_item_image"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
